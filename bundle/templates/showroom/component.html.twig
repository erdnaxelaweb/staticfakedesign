{% extends '@StaticFakeDesign/showroom/layout/default.html.twig' %}

{# @var component \ErdnaxelaWeb\StaticFakeDesign\Showroom\Component #}
{% block content %}
    {% include '@StaticFakeDesign/showroom/include/toolbar.html.twig' %}
    <main class="app-main">
        {% if component %}
            <div id="preview-canvas" class="canvas border-start border-end text-center">
                <iframe src="{{ url('showroom_component_preview', {'path': path}) }}" frameborder="0" width="100%" height="500px"></iframe>
            </div>

            {% set tabs = {
                'doc': 'tab.doc.title' |trans|desc('Documentation'),
                'parameters': 'tab.parameters.title' |trans({'%count%': component.parameters|length})|desc('Parameters (%count%)'),
                'accessibility': 'tab.accessibility.title' |trans|desc('Accessibilit√©'),
            } %}
            <div>
                <ul class="nav nav-tabs">
                    {% for tab,tabTitle in tabs %}
                        <li class="nav-item">
                            <button class="nav-link{{ loop.first ? ' active' }}" id="home-{{ tab }}"
                                    data-bs-toggle="tab" data-bs-target="#tab-content-{{ tab }}" type="button" role="tab" aria-controls="tab-content-{{ tab }}"
                                    {% if loop.first %} aria-selected="true"{% endif %}
                            >
                                {{ tabTitle }}
                            </button>
                        </li>
                    {% endfor %}
                </ul>
                <div class="tab-content" id="nav-tabContent">

                    {% for tab,tabTitle in tabs %}
                        <div class="tab-pane fade show{{ loop.first ? ' active' }}" id="tab-content-{{ tab }}" role="tabpanel" aria-labelledby="tab-{{ tab }}">
                            {% include '@StaticFakeDesign/showroom/tab/'~ tab ~'.html.twig' with {component: component} only %}
                        </div>
                    {% endfor %}
                </div>
            </div>
        {% endif %}
    </main>
{% endblock %}

{% block javascripts %}
    <script type="application/javascript">
        var breakpoints = JSON.parse('{{ showroom.getBreakpoints()|json_encode|raw }}');
        var path = "{{ path }}";
    </script>
    {{ parent() }}
{% endblock %}
